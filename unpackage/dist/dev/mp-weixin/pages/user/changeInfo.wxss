.content {
  padding: 20rpx;
  font-family: PingFang-SC-Medium;
}
.content .box {
  padding: 40rpx 20rpx;
  background-color: #fff;
}
.content .box .item {
  color: #80899c;
}
.content .box .item .input-box {
  height: 70rpx;
  padding-left: 20rpx;
  margin: 20rpx 0;
  border: 2rpx solid #e0e4ee;
  font-size: 30rpx;
}
.content .box .item .select-icon {
  position: relative;
}
.content .box .item .select-icon::after {
  content: "";
  position: absolute;
  top: 55%;
  -webkit-transform: translateY(-45%);
      -ms-transform: translateY(-45%);
          transform: translateY(-45%);
  right: 20rpx;
  width: 0;
  height: 0;
  border: solid;
  border-color: #e0e5ee transparent transparent transparent;
  border-width: 12rpx;
}
.content .box .item .imgList {
  padding: 30rpx 0 0 30rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.content .box .item .imgList .image-item {
  position: relative;
}
.content .box .item .imgList .image-item .image {
  width: 180rpx;
  height: 180rpx;
  padding-right: 30rpx;
}
.content .box .item .imgList .image-item .clear-icon {
  position: absolute;
  display: block;
  right: 15rpx;
  top: -15rpx;
  width: 36rpx;
  height: 36rpx;
}
.content .box .item .imgList .camera {
  width: 180rpx;
  height: 180rpx;
  display: inline-block;
  border: 2rpx solid #e0e4ee;
  vertical-align: top;
  position: relative;
}
.content .box .item .imgList .camera image {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 60rpx;
  height: 57rpx;
}
.content .box .item .phcolor {
  font-size: 30rpx;
  color: #cccccc;
}
.content .box .item .name {
  padding-left: 30rpx;
  font-size: 34rpx;
  position: relative;
}
.content .box .item .name::before {
  content: "";
  position: absolute;
  top: 35%;
  left: 10rpx;
  width: 4rpx;
  height: 20rpx;
  border-left: 4rpx solid #b2b9c9;
}
.content .box .item .radio {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #a6b5d5;
}
.content .box .item .radio .radio-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.content .box .item .radio .radio-group label {
  padding: 0 60rpx 0 30rpx;
}
.content .box .item .radio .radio-group text {
  padding-left: 20rpx;
}
.content .box .item .radio .isChoose {
  color: #80899c;
}
.content .box .item .twoGroup {
  padding-bottom: 80rpx;
}
.content .box .item .other {
  position: absolute;
  padding: 20rpx 0;
  bottom: 20rpx;
}
.content .box .footer {
  padding: 60rpx 0;
  text-align: center;
  color: #fff;
}
.content .box .footer .button {
  padding: 20rpx 200rpx;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal,
					normal;
}

