page {
  height: 100%;
  background-color: #f9fafd;
}
.header {
  position: relative;
  height: 330rpx;
  padding: 45rpx 0;
  background-color: #fff;
  text-align: center;
}
.header button {
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;
  border: 0;
  border-radius: 50%;
  pointer-events: auto;
}
.header button::after {
  border: none;
}
.header .avatar {
  position: absolute;
  top: 45rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
      -ms-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  pointer-events: none;
}
.header .nickName {
  display: block;
  padding-top: 40rpx;
  color: #333333;
  font-size: 36rpx;
}
.box {
  padding: 30rpx 20rpx 20rpx;
}
