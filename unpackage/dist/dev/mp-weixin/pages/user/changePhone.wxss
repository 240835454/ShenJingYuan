page {
  height: 100%;
  background-color: #f9fafd;
}
.box {
  padding: 20rpx;
}
.content {
  background-color: #fff;
  color: #80899c;
}
.content .info-item {
  padding: 40rpx 30rpx 0;
  font-size: 30rpx;
  background-color: #fff;
}
.content .info-item .name {
  display: block;
  padding-left: 30rpx;
  font-size: 34rpx;
  position: relative;
}
.content .info-item .name::before {
  content: "";
  position: absolute;
  top: 25rpx;
  left: 0;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
  width: 4rpx;
  height: 20rpx;
  border-left: 4rpx solid #b2b9c9;
}
.content .info-item .input-box {
  height: 70rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  border: 2rpx solid #e0e4ee;
  font-size: 30rpx;
}
.content .info-item .phcolor {
  color: #cccccc;
}
.content .footer {
  padding: 500rpx 0 80rpx;
  text-align: center;
  background-color: #fff;
}
.content .footer .button {
  padding: 20rpx 240rpx;
  color: #fff;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal,
				normal;
}

