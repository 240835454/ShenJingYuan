:for-index="index" wx:key="index"><label data-event-opts="{{[['tap',[['selectCourse',[index]]]]]}}" class="radio" bindtap="__e"><radio value="{{value}}" color="#fff"></radio><text class="{{[courseIndex==index?'isChoose':'']}}">{{item}}</text></label></block></radio-group></view></view><view class="item"><text class="name">大小便失禁</text><view class="radio"><radio-group class="radio-group"><block wx:for="{{incontinence}}" wx:for-item="item" wx:for-index="index" wx:key="index"><label data-event-opts="{{[['tap',[['selectIncontinence',[index]]]]]}}" class="radio" bindtap="__e"><radio value="{{value}}" color="#fff"></radio><text class="{{[incontinenceIndex==index?'isChoose':'']}}">{{item}}</text></label></block></radio-group></view></view><view class="item"><text class="name">检查化验单</text><view class="imgList"><block wx:for="{{imgList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="image-item"><image class="image" src="{{item}}" mode="aspectFit" data-src="{{item}}" data-event-opts="{{[['tap',[['previewImg',['$event']]]]]}}" bindtap="__e"></image><image class="clear-icon" src="../../static/icon_picture_del.png" mode data-event-opts="{{[['tap',[['deleteImg',[index]]]]]}}" bindtap="__e"></image></view></block><block wx:if="{{imgList.length<3}}"><view data-event-opts="{{[['tap',[['addImg',['$event']]]]]}}" class="camera" bindtap="__e"><image src="../../static/camera.png" mode></image></view></block></view></view><view class="footer"><text class="button">确定修改</text></view></view></view><block wx:if="{{selectList.length!=0}}"><w-picker class="vue-ref" vue-id="1" mode="selector" selectList="{{selectList}}" themeColor="{{themeColor}}" leftTopText="{{leftTopText}}" data-ref="selector" data-event-opts="{{[['^confirm',[['onConfirm']]]]}}" bind:confirm="__e" bind:__l="__l"></w-picker></block></view>