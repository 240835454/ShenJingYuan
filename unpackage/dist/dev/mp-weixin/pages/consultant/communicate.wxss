page {
  width: 100%;
  height: 100%;
  background-color: #f9fafd;
}
.chat-box {
  padding-bottom: 150rpx;
}
.chat-box .chat-item {
  padding-top: 40rpx;
}
.chat-box .chat-item .avatar {
  width: 100rpx;
  height: 100rpx;
  padding: 0 20rpx;
  vertical-align: top;
}
.chat-box .chat-item .text {
  display: inline-block;
  width: 450rpx;
  padding: 30rpx;
  font-size: 34rpx;
  color: #80899c;
  background-color: #fff;
  -webkit-box-shadow: 0px 4px 20px 0px rgba(166, 181, 213, 0.1);
          box-shadow: 0px 4px 20px 0px rgba(166, 181, 213, 0.1);
}
.chat-box .chat-item-reverse {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
      -ms-flex-pack: end;
          justify-content: flex-end;
  padding-top: 40rpx;
}
.chat-box .chat-item-reverse .avatar {
  width: 100rpx;
  height: 100rpx;
  padding: 0 20rpx;
  vertical-align: top;
}
.chat-box .chat-item-reverse .text {
  display: inline-block;
  width: 450rpx;
  padding: 30rpx;
  font-size: 34rpx;
  color: #80899c;
  background-color: #fff;
  -webkit-box-shadow: 0px 4px 20px 0px rgba(166, 181, 213, 0.1);
          box-shadow: 0px 4px 20px 0px rgba(166, 181, 213, 0.1);
}
.chat-box .chat-item-reverse .text {
  color: #fff;
  background-color: #a6b5d5;
}
.footer {
  position: fixed;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  bottom: 0;
  z-index: 10;
}
.footer .textarea-box {
  width: 500rpx;
  padding: 10rpx 0 0 20rpx;
  border: 2rpx solid #e0e4ee;
  line-height: 0;
  font-size: 30rpx;
}
.footer .phcolor {
  font-size: 30rpx;
  color: #cccccc;
}
.footer .icon {
  padding-left: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.emojiList {
  position: fixed;
  bottom: 90rpx;
  padding: 20rpx;
  background-color: #fff;
  font-size: 50rpx;
}
.emojiList text {
  display: inline-block;
  padding: 0 10rpx;
}

