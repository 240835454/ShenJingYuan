.box {
  padding: 20rpx;
}
.box .content {
  background-color: #fff;
  text-align: center;
}
.box .content .title {
  padding: 50rpx 120rpx;
  font-size: 34rpx;
  color: #333333;
  text-align: align;
}
.box .content .title text {
  display: block;
  text-align: align;
}
.box .item {
  color: #80899c;
  background-color: #fff;
  padding: 0 15rpx;
}
.box .item .name {
  display: block;
  padding-left: 30rpx;
  font-size: 34rpx;
  position: relative;
}
.box .item .name::before {
  content: "";
  position: absolute;
  top: 25rpx;
  -webkit-transform: translate(0, -50%);
      -ms-transform: translate(0, -50%);
          transform: translate(0, -50%);
  left: 10rpx;
  width: 4rpx;
  height: 20rpx;
  border-left: 4rpx solid #b2b9c9;
}
.box .item .input-box {
  height: 70rpx;
  padding-left: 20rpx;
  margin: 20rpx 0;
  border: 2rpx solid #e0e4ee;
  font-size: 30rpx;
}
.box .item .textarea-box {
  width: 100%;
  height: 220rpx;
  padding: 20rpx;
  margin-top: 20rpx;
  border: 2rpx solid #e0e4ee;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  font-size: 30rpx;
}
.box .item .phcolor {
  font-size: 30rpx;
  color: #cccccc;
}
.box .item .checkBox {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 20rpx;
  font-size: 30rpx;
  color: #a6b5d5;
}
.box .item .checkBox .checkBox-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 10rpx 0;
}
.box .item .checkBox text {
  display: block;
  padding-left: 20rpx;
}
.box .item .radio {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx;
  font-size: 30rpx;
  color: #a6b5d5;
}
.box .item .radio .radio-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-bottom: 30rpx;
}
.box .item .radio text {
  display: block;
  padding-left: 20rpx;
}
.box .item .isChoose {
  color: #80899c;
}
.box .footer {
  padding: 40rpx 0 60rpx 0;
  text-align: center;
  background-color: #fff;
}
.box .footer .button {
  display: inline-block;
  padding: 20rpx 240rpx;
  font-size: 34rpx;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal, 
				normal;
  color: #fff;
}
.box .model {
  position: absolute;
  top: 200rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 600rpx;
  padding: 40rpx 80rpx 80rpx;
  text-align: center;
  font-size: 34rpx;
  background-color: #fff;
  z-index: 10;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.box .model text {
  display: block;
}
.box .model .image {
  margin: 50rpx 0;
  width: 450rpx;
  height: 280rpx;
}
.box .model .desc {
  padding: 0 40rpx 40rpx;
  text-align: left;
  font-size: 28rpx;
  letter-spacing: 1px;
  color: #80899c;
}
.box .model .score {
  position: absolute;
  top: 35%;
  left: 50%;
  -webkit-transform: translate(-50%, -35%);
      -ms-transform: translate(-50%, -35%);
          transform: translate(-50%, -35%);
  font-size: 120rpx;
  color: #a69eff;
}
.box .model .score::after {
  content: '\5206';
  padding-left: 20rpx;
  font-size: 63rpx;
}
.box .model .button {
  padding: 20rpx 170rpx;
  color: #fff;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal,  
					normal;
}

