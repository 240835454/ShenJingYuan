.page {
  background-color: #f9fafd;
}
.tabBar {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-justify-content: space-around;
      -ms-flex-pack: distribute;
          justify-content: space-around;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #80899c;
  background-color: #fff;
  font-family: PingFang-SC-Bold;
}
.tabBar .tab-active {
  font-size: 34rpx;
  color: #333;
  position: relative;
}
.tabBar .tab-active::after {
  content: "";
  position: absolute;
  width: 80rpx;
  height: 1rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0);
      -ms-transform: translate(-50%, 0);
          transform: translate(-50%, 0);
  bottom: 15rpx;
  border-bottom: 6rpx solid #a69eff;
  border-radius: 5rpx;
}
.content {
  padding: 10rpx 20rpx 40rpx;
  color: #80899c;
}
.content .box {
  background-color: #fff;
  font-family: PingFang-SC-Medium;
}
.content .box .picture {
  padding: 40rpx 80rpx 20rpx;
  text-align: center;
  position: relative;
}
.content .box .picture image {
  width: 550rpx;
  height: 230rpx;
}
.content .box .picture .test-result {
  display: inline-block;
  position: absolute;
  top: 110rpx;
  left: 40%;
  font-size: 72rpx;
  font-family: '064-CAI978';
  color: #fffefe;
}
.content .box .picture .test-result::after {
  content: "%";
  padding-left: 20rpx;
  font-size: 40rpx;
}
.content .box .picture .result {
  display: block;
  padding-top: 20rpx;
  font-size: 34rpx;
}
.content .box .picture .report {
  display: inline-block;
  padding: 20rpx 64rpx;
  margin: 20rpx 0;
  color: #a69eff;
  border: 1rpx solid rgba(166, 158, 255, 0.3);
  font-size: 34rpx;
}
.content .info-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  position: relative;
  padding: 40rpx 80rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #e6e7eb;
  background-color: #fff;
}
.content .info-item .name::before {
  content: "";
  position: absolute;
  top: 44%;
  left: 50rpx;
  display: inline-block;
  width: 4rpx;
  height: 20rpx;
  border-left: 4rpx solid #b2b9c9;
}
.content .info-item .value {
  font-size: 28rpx;
  color: #b2b2b2;
  position: relative;
}
.content .info-item .value::after {
  content: "";
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  top: 28%;
  right: -40rpx;
  border-top: 1rpx solid #e5e5e5;
  border-right: 1rpx solid #e5e5e5;
  -webkit-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
          transform: rotate(45deg);
  position: absolute;
}
.content .footer {
  padding: 40rpx 0 20rpx 0;
  text-align: center;
  background-color: #fff;
  border-top: 1rpx solid #e6e7eb;
}
.content .footer .button {
  display: inline-block;
  padding: 20rpx 200rpx;
  font-size: 34rpx;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal,
				normal;
  color: #fff;
}

