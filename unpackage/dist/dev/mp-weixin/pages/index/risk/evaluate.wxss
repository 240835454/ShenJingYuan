.content {
  padding: 20rpx;
  font-family: PingFang-SC-Medium;
}
.content .box {
  padding: 40rpx 20rpx;
  background-color: #fff;
}
.content .box .item {
  color: #80899c;
}
.content .box .item .name {
  padding-left: 30rpx;
  font-size: 34rpx;
  position: relative;
}
.content .box .item .name::before {
  content: "";
  position: absolute;
  top: 35%;
  left: 10rpx;
  width: 4rpx;
  height: 20rpx;
  border-left: 4rpx solid #b2b9c9;
}
.content .box .item .radio {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  position: relative;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #a6b5d5;
}
.content .box .item .radio .radio-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.content .box .item .radio .radio-group label {
  padding: 0 60rpx 0 30rpx;
}
.content .box .item .radio .radio-group text {
  padding-left: 20rpx;
}
.content .box .item .radio .isChoose {
  color: #80899c;
}
.content .box .footer {
  padding: 200rpx 0 60rpx;
  text-align: center;
  color: #fff;
}
.content .box .footer .button {
  padding: 20rpx 200rpx;
  background-image: -webkit-gradient(linear, left bottom, left top, from(#a69eff), to(#ccc7ff)), -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#ffffff));
  background-image: -o-linear-gradient(bottom, #a69eff 0%, #ccc7ff 100%), -o-linear-gradient(#ffffff, #ffffff);
  background-image: linear-gradient(0deg, #a69eff 0%, #ccc7ff 100%), linear-gradient(#ffffff, #ffffff);
  background-blend-mode: normal,
					normal;
}

